root = true

[*]
indent_size = 4
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cc,hh,cpp,hpp,cxx,hxx}]
indent_size = 4
indent_style = space

[{CMakeLists.txt,*.cmake}]
indent_size = 4
indent_style = space

[*.{json,yaml,yml}]
indent_size = 2
indent_style = space

[*.md]
# whitespaces at end of lines in markdown files have special meaning
trim_trailing_whitespace = false
